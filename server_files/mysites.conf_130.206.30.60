# this goes in /etc/apache2/sites-available/
<VirtualHost *:80>
	ServerName 130.206.30.60
    # logs configuration
    LogLevel info
    ErrorLog ${APACHE_LOG_DIR}/error.log
    CustomLog ${APACHE_LOG_DIR}/access.log combined

    WSGIDaemonProcess webappsunscene user=ubuntu group=ubuntu threads=5 python-home=/home/ubuntu/webappsunscene/venv
    WSGIScriptAlias /webappsunscene /home/ubuntu/webappsunscene/webappsunscene.wsgi
    <Directory /home/ubuntu/webappsunscene>
        WSGIApplicationGroup webappsunscene
        WSGIProcessGroup webappsunscene
        Order deny,allow
        Allow from all
	Require all granted
    </Directory>

</VirtualHost>
